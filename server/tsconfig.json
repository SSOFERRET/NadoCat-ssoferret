{
  "compilerOptions": {
    "target": "es6",
    "module": "CommonJS",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true, 
    "strict": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "typeRoots": ["./types", "./node_modules/@types"] // typeRoots 추가
  },
  
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "types/**/*.d.ts" // include 추가
  ]
}
